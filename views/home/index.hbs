<p>Total Posts: {{getFormattedNumber total}}</p>
<div class="row gy-5 gx-5">

  {{#each posts}}
    <div class="col-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">{{this.title}}</h5>
          <p class="card-text">{{truncate this.body 50}}</p>
          <a href="/post/{{this.id}}" class="btn btn-primary">Read More</a>
        </div>
      </div>
    </div>
  {{/each}}
</div>